@model IEnumerable<Resume.Models.Entities.Education>
@{
    Layout = null;
    string date = string.Empty;

}

<section id="education" class="section">
    <div class="container">
        <!-- SECTION TITLE -->
        <div class="section-title">
            <h4 class="text-uppercase text-center"><img src="~/images/icons/book.png" alt="demo">Təhsil (Education)</h4>
        </div>

        <div id="">
            @foreach (var item in Model)
            {
                if (item.ShowDay)
                {
                    date += "dd.";
                }
                if (item.ShowMonth)
                {
                    date += "MM.";
                }
                if (item.ShowYear)
                {
                    date += "yyyy";
                }
                <div class="timeline-block" style="font-family:'Palatino Linotype'">
                    <!-- DOT -->
                    <div class="timeline-dot"><i class="fa fa-graduation-cap"></i></div>
                    <!-- TIMELINE CONTENT -->
                    <div class="card timeline-content">
                        <div class="card-content">
                            <!-- TIMELINE TITLE -->
                            <h6 class="timeline-title"><strong>@item.EducationCenter</strong></h6>
                            <!-- TIMELINE TITLE INFO -->
                            <div class="timeline-info" style="font-family:'Palatino Linotype'">
                                <h6 style="color:#06a763">
                                    <small>@item.StartDate.ToString(date) - @(item.Present == true? "Dəvam edir" : item.EndDate.ToString(date))</small>
                                    @(date = null)
                                </h6>
                                <h6 style="color:#1976d2">
                                    <small ><strong>@item.Description</strong></small>
                                </h6>
                            </div>
                            <!-- TIMELINE PARAGRAPH -->
                            <p>
                                <span style="color:red">*</span> @item.Faculty <br /><span style="color:red">*</span>  @item.Specialty
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

