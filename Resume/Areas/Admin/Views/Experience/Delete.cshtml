@model Resume.Models.Entities.Experience

@{
    ViewData["Title"] = "Təcrübə - Sil";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3>Silinən məlumatlar geri qaytarılmır!</h3>
<div>
    <h4>Experience</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Müəssisə
        </dt>
        <dd class="col-sm-10">
            @Model.Company
        </dd>
        <dt class="col-sm-2">
            Başlama
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate.ToString("dd-MM-yyyy")
        </dd>
        <dt class="col-sm-2">
            Bitirmə
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate.ToString("dd-MM-yyyy")
        </dd>
        <dt class="col-sm-2">
            Mövqey
        </dt>
        <dd class="col-sm-10">
            @Model.Position
        </dd>
        <dt class="col-sm-2">
            Açıqlama
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>

    <form asp-action="Delete" class="form-disable">
        <input type="hidden" asp-for="ID" />
        <input id="submit" data-submit-value="GÖZLƏYİN..." type="submit" value="Sil" class="btn btn-outline-primary"> |
        <a asp-action="Index" class="btn btn-dark">Geri</a>
    </form>
</div>
